-# app/views/devise/sessions/new.html.haml

%h2 Sign In

= form_for(resource, :as => resource_name, :url => session_path(resource_name), :builder => FoundationFormBuilder) do |form|

  = form.label :email, 'Email Address'
  = form.email_field :email, :autofocus => true, :placeholder => 'me@example.com'
  
  = form.label :password, 'Password'
  = form.password_field :password

  - if devise_mapping.rememberable?
    = form.check_box :remember_me
    = form.label :remember_me, 'Remember Me'
    %br

  = form.submit "Sign In", :class => 'button'

= render "devise/shared/links"

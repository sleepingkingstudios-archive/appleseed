-# app/views/devise/registrations/new.html.haml

%h2 Register

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :builder => FoundationFormBuilder) do |form|

  - unless resource.errors.blank?
    .panel
      %h4
        = pluralize(resource.errors.count, "error")
        prohibited this #{resource.class} from being saved:
      %ul
        - resource.errors.full_messages.each do |message|
          %li= message

  = form.label :email, 'Email Address'
  = form.email_field :email, :autofocus => true, :placeholder => 'user@example.com'

  .row
    .large-6.columns
      = form.label :password, 'Password'
      = form.password_field :password
    .large-6.columns
      = form.label :password_confirmation, 'Confirm Password'
      = form.password_field :password_confirmation

  = form.submit "Register User", :class => 'button'

= render "devise/shared/links"
